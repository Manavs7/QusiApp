<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    tools:context=".UserActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="450dp"
        app:cardElevation="50dp"
         android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almost done..."
                android:padding="15dp"
                android:fontFamily="@font/cutive"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select your gender:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.111"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.044" />

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextcustumization"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.189">

                    <RadioButton
                        android:id="@+id/rdoMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/blue"
                        android:layout_marginRight="50dp"
                        android:checked="false"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/rdoFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/pink"
                        android:checked="false"
                        android:paddingRight="2dp"
                        android:text="Female" />
                </RadioGroup>



                <ImageView
                    android:layout_width="230dp"
                    android:layout_height="230sp"
                    android:layout_marginStart="184dp"
                    android:layout_marginLeft="184dp"
                    android:layout_marginTop="260dp"
                    android:src="@drawable/logo_strawberry"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/readybutton"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/custum_button"
        android:text="Ready Up"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        />


</LinearLayout>