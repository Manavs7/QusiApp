<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    tools:context=".Userdata">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before we start..."
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:text="We're going to need some information about you!"
            android:textSize="20sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/etusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textSize="30sp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:background="@drawable/edittextcustumization"
        android:maxLength="15"
        />

    <EditText
        android:id="@+id/etage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="30sp"
        android:gravity="center"
        android:hint="Age"
        android:inputType="number"
        android:background="@drawable/edittextcustumization"
        />

    <EditText
        android:id="@+id/etheight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="30sp"
        android:gravity="center"
        android:hint="Height in cm"
        android:inputType="number"
        android:background="@drawable/edittextcustumization"
        />

    <EditText
        android:id="@+id/etweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="30sp"
        android:gravity="center"
        android:hint="Weight in kg"
        android:inputType="number"
        android:background="@drawable/edittextcustumization"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Userdatabutton"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/custum_button"
        android:text="@string/next"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
       />

</LinearLayout>